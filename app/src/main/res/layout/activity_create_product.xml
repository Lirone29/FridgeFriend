<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ProductInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Product Information:"
        android:textSize="22sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/productNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:ems="5"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Name:"/>

        <EditText
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/productNameLabel"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/searchProductExpirationDate"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_below="@id/productNameLabel"
            android:layout_marginBottom="6dp"
            android:ems="5"
            android:text="Expiration Date:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/productExpirationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/searchProductExpirationDate"
            android:ems="10"
            android:hint="amount (e.g. 3)"
            android:inputType="date|textPersonName" />

        <TextView
            android:id="@+id/productWeightLabel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/searchProductExpirationDate"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:ems="5"
            android:text="Weight:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/productWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productExpirationDate"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/productWeightLabel"
            android:ems="10"
            android:hint="in gram"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/productCaloriesLabel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/productWeightLabel"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:ems="5"
            android:text="Calories:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/productCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productWeight"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/productCaloriesLabel"
            android:ems="10"
            android:hint="amount (e.g. 100)"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/createProductReturnButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/productCalories"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:foregroundGravity="center"
            android:gravity="clip_horizontal|center|center_horizontal"
            android:text="Return" />

        <Button
            android:id="@+id/createProductButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/productCalories"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/createProductReturnButton"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Create" />
    </RelativeLayout>

</LinearLayout>